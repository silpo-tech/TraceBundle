{
    "name": "silpo-tech/trace-bundle",
    "type": "symfony-bundle",
    "description": "Trace bundle for Symfony",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "symfony/http-kernel": "^6.4|^7.0",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.6",
        "symfony/dependency-injection": "^6.4|^7.0",
        "symfony/config": "^6.4|^7.0",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/yaml": "^7.2"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "TraceBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TraceBundle\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "sentry/sentry": "Adds sentry tracing middleware to Guzzle handlers",
        "silpo-tech/message-bus-bundle": "Adds correlation ids to messages and to logs"
    },
    "conflict": {
        "silpo-tech/message-bus-bundle": "<1.4.5"
    },
    "require-dev": {
        "sentry/sentry": "^4.9",
        "silpo-tech/message-bus-bundle": "^1.4.5",
        "phpunit/phpunit": "^11.5",
        "enqueue/enqueue-bundle": "^0.10.24",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "test:coverage": {
            "command": "APP_ENV=test php -d extension=pcov.so -d pcov.enabled=1 bin/phpunit --colors=never --coverage-clover reports/coverage/clover.xml --log-junit reports/junit.xml"
        },
        "test:run": [
            "APP_ENV=test php bin/phpunit --color=always"
        ]
    }
}
